<% content_for :sidebar do %>
  <% @adapters.each do |adapter| %>  
    <ul class="nav nav-list">
      <li class="nav-header">      
        <b><%= current_app %></b> <%= adapter.database.collection_name(2) %>
      </li>
    </ul>
    <ul class="nav nav-list" data-view="collections">
      <% adapter.database.collections.each do |collection| %>
        <li>
          <a href='#' data-adapter='<%= adapter.name %>' data-collection='<%= collection %>'><i class="icon-list"></i> <%= collection %></a>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<div id='find-progress' class="progress progress-striped active">
  <div class="bar"></div>
</div>
<div class="query-container" data-view="query">
  <form>
    <textarea id="code"></textarea>
    <button data-action="run">Run Query &raquo;</button>
  </form>
</div>
<div class="fixed-table-container" data-format="table">
  <table class="table table-condensed">
    <thead>
      <tr class="odd">
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>